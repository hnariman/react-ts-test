{
    "include": [
        "./src/**/*"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@pages": [
                "src/pages"
            ],
            "@components": [
                "src/components"
            ],
            "@types": [
                "src/types"
            ]
        },
        "strict": true,
        "esModuleInterop": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "jsx": "react-jsx"
    }
}